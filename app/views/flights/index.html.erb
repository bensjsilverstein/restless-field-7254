<h1><%= "Flight Index Page" %></h1>
<% @flights.each_with_index do |flight, index| %>
  <div id="flight<%=index%>">
    <h3><%= "#{flight.number} - #{flight.airline.name}" %></h3>
    <%= "Passengers:"%>
    <% flight.passengers.each do |passenger| %><br>
      <%= passenger.name %> <%= button_to "Remove #{passenger.name}", "/flight_passengers/#{flight.id}/#{passenger.id}",  method: :delete, local: true %>
    <% end %>
  </div>
<% end %>
